<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="isAutoSyncEnabled"
        android:title="@string/pref_title_auto_download" />

    <ListPreference
        android:defaultValue="@string/pref_sync_freq_default"
        android:entries="@array/pref_sync_freq_titles"
        android:entryValues="@array/pref_sync_freq_values"
        android:key="sync_freq"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_freq" />

    <ListPreference
        android:defaultValue="@string/pref_price_select_default"
        android:entries="@array/list_pref_price_select_titles"
        android:entryValues="@array/list_pref_price_select_values"
        android:key="price_select"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_price_select" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="isStartNewWork"
        android:title="@string/pref_title_start_new" />

</PreferenceScreen>
